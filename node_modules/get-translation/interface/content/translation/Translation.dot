
<div class="translation" data-content="translation">
  <h1 class="translation-title">{{=it.key}}</h1>
  <form class="translation-form">
    <div class="translation-variables">
      <label class="translation-sub-title">{{=it.i18n_variables}}</label>
      <ul class="translation-variables-list">
      {{?it.vars.length > 0}}
        {{~it.vars :variable:index}}
          <li class="translation-variable">{{=variable}}</li>
        {{~}}
      {{??}}
        <li class="translation-variable">{{=it.i18n_none}}</li>
      {{?}}
      </ul>
    </div>
    <div class="translation-inputs clearfix">
      <label class="translation-sub-title">{{=it.i18n_translation}}</label>
      <div class="translation-values">
        {{=it.values}}
      </div>
      <div class="translation-actions">
        <button class="save button" type="submit" disabled>{{=it.i18n_save}}</button>
        <button class="add-condition button" type="button" disabled>{{=it.i18n_addCondition}}</button>
      </div>
    </div>
  </form>
</div>
