<!--

Condition

@param {String} statement
@param {Array.<Variable>} vars

!-->

{{##def.operators : load('./ConditionOperators.part'); #}}
{{##def.then : load('./ConditionThen.part'); #}}

<div class="condition" data-row="{{=it.row}}">
  <label class="condition-statement">{{=it.statement}}</label>
  <div class="condition-vertical"></div>
    {{=it.firstOperand}}
  <div class="condition-vertical"></div>
    {{#def.operators}}
  <div class="condition-vertical"></div>
    {{=it.lastOperand}}
  <div class="condition-vertical"></div>
    {{#def.then}}
  <div class="condition-vertical"></div>
  <div class="condition-exit">
    <span class="condition-exit-background">
      <i class="condition-exit-icon js-condition-exit sp-default sp-default-exit"></i>
    </span>
  </div>
</div>
